# Main MENU system.....
while : ; do
menuopt=$(whiptail --title "RYSEN Master+ | SYSTEM-X Control" --menu "Select option by using the up and down arrows on your keyboard. Once selected by press enter:" 23 56 13 \
1 " Restart Master " \
2 " Stop Master " \
3 " Start Master " \
4 " Hard Flush Master " \
5 " Soft Flush Master " \
6 " Edit Configuration " \
7 " Edit rules.py " \
8 " Edit Dashboard Config " \
9 " Update Master Server Software " \
10 " Full Upgrade RYSEN Master+ " \
11 " Operating System update " \
12 " Reboot Entire Server " 3>&1 1>&2 2>&3)
exitstatus=$?
# Back-end rysen menu
#exitstatus=$?
if [ $exitstatus = 0 ]; then
    echo "You have chosen option:" $menuopt
else
    echo "Type 'menu' to start RYSEN Master+ SYSTEX-X Control Menu "; break;
fi
# Action
case $menuopt in
1)
/usr/bin/systemx-restart ;;
2)
/usr/bin/systemx-stop ;;
3)
/usr/bin/systemx-start ;;
4)
/usr/bin/systemx-flush ;;
5)
/usr/bin/systemx-soft-flush ;;
6)
sudo nano /etc/rysen/rysen.cfg ;;
7)
sudo nano /etc/rysen/rules.py ;;
8)
sudo nano /opt/RYMonv3/rymon.cfg ;;
9)
/usr/bin/systemx-update ;;
10)
echo "No updates" && sleep 2 ;;
11)
sudo apt-get update -y && sudo apt-get upgrade ;;
12)
sudo reboot now ;
esac
done
exit

# Menu system by ShaYmez https://github/ShaYmez
