# Update containers / service clean/truncate/ and restart of services..

echo Restarting Server.....
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
sleep 1
echo "....."
cd /etc/rysen
docker-compose restart
sleep 1

figlet "SYSTEM-X." 
sleep 1

echo "Checking System-X is composed....."
sleep 1
docker ps
sleep 1

#echo "Checking startup error logs....."
#sleep 1
#docker container logs systemx 
#echo "Done."

echo "Flushing network tracking table....."
conntrack -F
sleep 1

echo "Restarting RYMonv3....."
systemctl restart rymon
figlet "RYMonv3."
echo "Done."

echo "Now Exiting....."
sleep 1
echo .
sleep 1
echo ..
sleep 1
echo ...
sleep 1
echo ....
echo "SYSTEM X has been restarted. Process is now complete and you may now exit. AKA ShaYmez."
